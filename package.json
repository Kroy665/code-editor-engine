{
  "name": "@code-editor/engine",
  "version": "1.0.0",
  "description": "Future-proof headless code editor engine for any platform",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:pack": "rm -rf dist && rm -rf code-editor-engine-*.tgz && npm run build && npm pack",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "code-editor",
    "text-editor",
    "monaco",
    "headless",
    "typescript",
    "react-native",
    "mobile",
    "syntax-highlighting",
    "language-server",
    "lsp",
    "intellisense",
    "autocomplete",
    "editor-engine",
    "extensible",
    "plugin-system"
  ],
  "author": "Koushik Roy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kroy665/code-editor-engine.git"
  },
  "bugs": {
    "url": "https://github.com/Kroy665/code-editor-engine/issues"
  },
  "homepage": "https://github.com/Kroy665/code-editor-engine#readme",
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}